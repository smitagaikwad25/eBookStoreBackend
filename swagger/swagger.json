{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "E-Book Store App",
        "description": "this is a E-Book App Swagger to access rest API server",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "tags": [{
        "name": "Users",
        "description": "API for users in the system"
    }],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/addbooks": {
            "post": {
                "tags": [
                    "BookData"
                ],
                "description": "Create New Book Data in system",
                "parameters":[
                    {
                    "name": "bookData",
                    "in": "body",
                    "description": "Book data that we want to create",
                    "schema": {
                       "$ref":"#/definitions/Books"                  }
                }
            ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "new book added",
                        "schema": {
                            "$ref":"#/definitions/Books"                            }
                    }
                }
            }
        },
        "/displaybooks": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "summary": "Get All the Books in System",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                } 
            }

        },
        "/searchbook": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "summary": "Search the required Book",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                }
            }

        },
        "/lowtohighrelevance": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "summary": "Get all Lowest to Highest price Books in System",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                }
            }

        },
        "/hightolowrelevance": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "summary": "Get all Highest to Lowest Price Books in system",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                }
            }

        },
        "/newestarrival": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "summary": "Get all Newly arrived Books in system",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                }
            }

        },
        "/getimage": {
            "get": {
                "tags": [
                    "BookData"
                ],
                "description":"Get the image for displaying",
                "summary": "Get image for the Books",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Books"
                    }
                  }
                }
            }

        },
        "/userregistration": {
            "post": {
                "tags": [
                    "UserData"
                ],
                "description":"get user data",
                "parameters":[{
                    "name": "userData",
                    "in": "body",
                    "description": "Create user and add the information",
                    "schema": {
                        "$ref":"#/definitions/Users"                        
                    }
                }]
            }

        },
        "/showuserdetails": {
            "get": {
                "tags": [
                    "UserData"
                ],
                "summary": "Get the user information",
                "responses": {
                  "200": {
                    "description": "OK",
                    "schema": {
                      "$ref": "#/definitions/Users"
                    }
                  }
                }
            }

        },
        "/updateuserdata":{
        "put": {
            "summary": "Update user with give ID",
            "tags": [
              "UserData"
            ],
            "parameters": [
              {
                "name": "userData",
                "in": "body",
                "description": "User with new values of properties",
                "schema": {
                  "$ref": "#/definitions/Users"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "User is updated",
                "schema": {
                  "$ref": "#/definitions/Users"
                }
              }
            }
          }
        }
    },
    "definitions":{
        "Books":{
            "required":[
                "TITLE",
                "AUTHOR",
                "YEAR",
                "DESCRIPTION",
                "RATING",
                "PRICE",
                "NOOFCOUNT",
                "IMAGEURL"
            ],
            "properties":{
                "TITLE":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "AUTHOR":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "YEAR":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "DESCRIPTION":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "RATING":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "PRICE":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "NOOFCOUNT":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "IMAGEURL":{
                    "type":"string",
                    "uniqueItems":"true"
                }
            }
        },
        "Users":{
            "required":[
                "NAME",
                "PHONE_NO",
                "PIN",
                "LOCALITY",
                "ADDRESS",
                "CITY_TOWN",
                "LANDMARK"
            ],
            "properties":{
                "NAME":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "PHONE_NO":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "PIN":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "LOCALITY":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "ADDRESS":{
                    "type":"number",
                    "uniqueItems":"true"
                },
                "CITY_TOWN":{
                    "type":"string",
                    "uniqueItems":"true"
                },
                "LANDMARK":{
                    "type":"string",
                    "uniqueItems":"true"
                }

            }
        }
    }
}

